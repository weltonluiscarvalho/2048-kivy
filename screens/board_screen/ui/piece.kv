<Piece>
    size_hint: .25, .25 
    canvas.before:
        Color:
            rgb: self.color_bg
        RoundedRectangle:
            pos: self.x + self.height * .03, self.y + self.width * .03
            size: self.width * .94, self.height * .94
            radius: [self.width / 8]
    font_size: f"{self.width / 2.5}sp"
    bold: True
    font: 'clear-sans'
